---
import biblioteca from '../data/biblioteca.json';
---

<html lang="es">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
	<title>Índice Completo de la Biblioteca</title>
	<style>
		body {
			font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
			line-height: 1.6;
			background-color: #f4f4f9;
			color: #2c2c2c;
		}
		main {
			max-width: 1024px;
			margin: 2rem auto;
			background-color: #fff;
			padding: 2rem 3rem;
			border-radius: 8px;
			box-shadow: 0 4px 16px rgba(0,0,0,0.08);
		}
		h1 {
			text-align: center;
			font-size: 2.8rem;
			color: #1a1a1a;
			border-bottom: 3px solid #e0e0e0;
			padding-bottom: 1rem;
			margin-bottom: 2rem;
		}
		.section-title {
			font-size: 2.2rem;
			color: #333;
			border-bottom: 2px solid #eee;
			padding-bottom: 0.5rem;
			margin-top: 3rem;
		}
		.entry h2 {
			font-size: 1.4rem;
			margin-top: 2rem;
			margin-bottom: 0.75rem;
			color: #0056b3;
		}
		.entry ul {
			list-style: none;
			padding-left: 1rem;
			margin: 0;
		}
		.entry li {
			margin-bottom: 0.5rem;
		}
		.entry a {
			text-decoration: none;
			color: #333;
			transition: color 0.2s ease-in-out;
		}
		.entry a:hover {
			color: #007bff;
			text-decoration: underline;
		}
	</style>
</head>
<body>
	<main>
		<h1>Índice Completo de la Biblioteca</h1>

		<h2 class="section-title">Autores</h2>
		{Object.entries(biblioteca.autores).map(([autor, obras]) => (
			<div class="entry">
				<h2>{autor}</h2>
				<ul>
					{obras.map(obra => (
						<li>
							<a href={`/${obra.ruta}`} target="_blank" rel="noopener noreferrer">{obra.titulo}</a>
						</li>
					))}
				</ul>
			</div>
		))}

		<h2 class="section-title">Reveladores</h2>
		{Object.entries(biblioteca.reveladores).map(([revelador, obras]) => (
			<div class="entry">
				<h2>{revelador}</h2>
				<ul>
					{obras.map(obra => (
						<li>
							<a href={`/${obra.ruta}`} target="_blank" rel="noopener noreferrer">{obra.titulo}</a>
						</li>
					))}
				</ul>
			</div>
		))}
	</main>
</body>
</html>